<refsection>
   <title>Parameters</title>
   <variablelist>
        <varlistentry>
            <term>A:</term>
            <listitem><para> scales</para></listitem>
        </varlistentry>
        <varlistentry>
            <term>wname:</term>
            <listitem><para> wavelet function name</para></listitem>
        </varlistentry>
        <varlistentry>
            <term>DELTA:</term>
            <listitem><para> sampling period</para></listitem>
        </varlistentry>
        <varlistentry>
            <term>F:</term>
            <listitem><para> corresponding frequencies for the given scales</para></listitem>
        </varlistentry>
   </variablelist>
